package cl.generation.f20221026;

import java.util.Scanner;

public class BucleDoWhileTest {

	public static void main(String[] args) {
		// doWhile
		//a lo menos se ejecuta una vez
		Scanner scanner = new Scanner(System.in);
		
		
		int edad =0;
		do {
			System.out.println("ingresa tu edad: ");
			edad= scanner.nextInt();
		}while(edad<18 || edad>120);
		
		System.out.println("tu edad es: "+edad);
		System.out.println("--------------------------------");
		
		
		float kilos =0f;
		do {
			System.out.println("ingresa tu peso en kilos: ");
			kilos= scanner.nextFloat();
		}while(kilos<40 || kilos>150);
		
		System.out.println("tu ´peso en kilos es: "+kilos);
		System.out.println("--------------------------------");
		
		
		float estatura =0f;
		do {
			System.out.println("ingresa tu peso en kilos: ");
			estatura= scanner.nextFloat();
		}while(estatura<1 || estatura>2.5f);
		
		System.out.println("tu ´peso en kilos es: "+estatura);
		System.out.println("--------------------------------");
		
		scanner.close();
	}

}
