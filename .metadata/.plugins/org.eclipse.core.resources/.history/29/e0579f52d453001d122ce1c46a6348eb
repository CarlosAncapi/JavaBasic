package cl.generation.f20221024;

public class PracticaArreglos {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] lista = new int [10];// Lista de números enteros que llenaremos.
		lista[0]= 1;
		lista[1]= -1;
		lista[2]= 2;
		lista[3]= -2;
		lista[4]= 3;
		lista[5]=-3;
		lista[6]=4;
		lista[7]=-4;
		lista[8]=4;
		lista[9]=-5;
		
		int maximo = 0; // Declaramos e inicializamos el máximo.
		int minimo = 0; // Declaramos e inicializamos el máximo.

		for (int i = 0; i < 100; i++){
			if (maximo < lista[i])
				maximo = lista[i];
			if (minimo > lista[i])
				minimo = lista[i];
		}

		// Al finalizar el bucle, las variables contienen los valores máximos y mínimos.
		System.out.println("La máximo de la lista es " + maximo);
		System.out.println("La mínimo de la lista es " + minimo);
	}

}
